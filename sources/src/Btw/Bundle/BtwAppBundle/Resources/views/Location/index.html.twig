{% extends "BtwAppBundle::layout.html.twig" %}

{% block title %}Wahllokal-Login{% endblock %}

{% block content %}

    <div class="visible-md visible-lg" style="height: 100px"></div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Wahllokal-Login</h1>

            <p class="lead">
                Bitte wählen Sie zunächst ihren Wahlkreis:
            </p>

            {{ form(form) }}
        </div>
    </div>

    <script type="text/javascript">
        $('#BTW_Elector_Register_constituency')
                .val([])
                .change(function () {
                    var selected = $(this).find(':selected').val();
                    window.location = Routing.generate('btw_app_location_create', { constituencyId : selected });
                });
    </script>

    <div class="visible-md visible-lg" style="height: 100px"></div>

{% endblock %}
