{% extends "BtwAppBundle::layout.html.twig" %}

{% block title %}Bundestagswahl {{ year }}{% endblock %}

{% block content %}

    <div ng-app="btw" ng-controller="DetailsController" ng-init="year = {{ year }}">
    {% verbatim %}

        <h1>Ergebnisse der Wahl {{ year }} {{ title ? '– '+title : '' }}</h1>

        <div class="row">
            <div class="col-md-8">
                <div id="chart" class="btw-chart" btw-chart="chart"></div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="details-state">Bundesland</label>
                    <select id="details-state" class="form-control" ng-model="state" ng-options="s.id as s.name for s in states"></select>
                </div>
                <div class="form-group">
                    <label for="details-constituency">Wahlkreis</label>
                    <select id="details-constituency" class="form-control" ng-model="constituency" ng-options="c.id as c.name for c in constituencies"></select>
                </div>
                <table class="table">
                    <thead>
                        <tr><th colspan="2">Details</th></tr>
                    </thead>
                    <tbody>
                        <tr><th>Einwohner</th><td>{{ location.population | number }}</td></tr>
                        <tr><th>Wahlbeteiligung</th><td>{{ (location.participation * 100) | number:2 }}%</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-6">
                <h3>Parteien</h3>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Partei</th>
                            <th>Stimmen</th>
                            <th>Mandate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="party in parties">
                            <td class="text-center">
                                <span class="label" style="background: {{ party.color }}">&nbsp;&nbsp;</span>
                            </td>
                            <td>
                                {{ party.name }}
                            </td>
                            <td class="text-right">
                                {{ party.votes | number }} ({{ (party.percentage * 100) | number:2 }}%)
                            </td>
                            <td class="text-right">
                                <b>{{ party.seats }}</b>
                                <span bs-tooltip="Überhangmandate">(+ {{ party.overhead }})</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h3>Gewählte Abgeordnete</h3>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Partei</th>
                            <th>Abgeordneter</th>
                            <th>Direktmandat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="member in members">
                            <td>{{ member.party }}</td>
                            <td>{{ member.name }}</td>
                            <td><i class="glyphicon glyphicon-ok" ng-show="member.direct"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="btw-loading" ng-show="loading"></div>

        {% endverbatim %}
    </div>

{% endblock %}
